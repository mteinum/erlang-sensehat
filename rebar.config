{erl_opts, [
    debug_info,
    warnings_as_errors,
    warn_export_vars,
    warn_unused_import,
    warn_missing_spec
]}.

{deps, []}.

{plugins, []}.

{profiles, [
    {test, [
        {deps, []}
    ]}
]}.

{project_plugins, []}.

{cover_enabled, true}.
{cover_opts, [verbose]}.

{dialyzer, [
    {warnings, [
        error_handling,
        unknown,
        unmatched_returns
    ]},
    {get_warnings, true},
    {plt_apps, top_level_deps},
    {plt_extra_apps, []},
    {plt_location, local},
    {base_plt_apps, [stdlib, kernel]},
    {base_plt_location, global}
]}.

{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    locals_not_used,
    deprecated_function_calls,
    deprecated_functions
]}.

{port_specs, [
    {"priv/sensehat_drv.so", ["c_src/sensehat_drv.c"]},
    {"priv/sensestick_drv.so", ["c_src/sensestick_drv.c"]}
]}.

{port_env, [
    {"CFLAGS", "$CFLAGS -Wall -Wextra -Wformat -fPIC"},
    {"LDFLAGS", "$LDFLAGS -shared"}
]}.
